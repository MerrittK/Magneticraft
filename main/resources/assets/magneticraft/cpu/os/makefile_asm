CC=  mips-linux-gnu-gcc -Wall -Os -mips1
ARGS = -S
LIBS = -lm
HEADER_FILES_DIR = ./headerFiles
INCLUDES = -I $(HEADER_FILES_DIR)

MAIN = main.s

SRCS = main.c drivers.c

DEPS = $(HEADER_FILES_DIR)/drivers.h

$(MAIN): $(SRCS) $(DEPS)
	$(CC) $(ARGS) $(SRCS) $(INCLUDES) $(LIBS)
	
cleanall: clean
	rm -f $(MAIN)
clean:
	rm -f *.o *~
